<div class="container">
    <div class="page-header">
        <div class="container">
            <div class="row">
                <div class="col-10">
                    <h1>Your Current Reminders: </h1>
                </div>
                <div class="col">
                    <button type="button" class="btn btn-primary" style="position:absolute; right:0px;bottom:0px" onclick="shareMultipleReminders()">Share Reminders</button>
                </div>
            </div>
        </div>
    </div>
    {{#each reminder}}
    <div class="card">

        <div class="card-body fadeIn">

            <p id="reminderId" class="reminderID" hidden>{{_id}}</p>
            <h5 class="card-title">{{name}}</h5> <!--Reminder Name-->
            <h6 class="card-subtitle mb-2 text-muted">{{date}}</h6> <!--Date/Time-->
            <p class="card-text">{{description}}</p> <!--Description-->

            <ul class="fadeIn">
                {{#each subtasks}}
                    <li>{{description}}</li>
                {{/each}}
            </ul>

            <div class="fadeIn">
                {{#each tags}}
                    <li>{{description}}</li>
                {{/each}}
            </div>
            
            <a class="card-link" href="javascript:void(0);" onclick="editReminder(this)">Edit</a>
            <a class="card-link" href="javascript:void(0);" onclick="deleteReminder(this)">Delete</a>
            <!-- using a tag without href to follow existing implementation  -->
            <a class="card-link" href="javascript:void(0);" onclick="shareReminder(this)">Share</a>
        </div>
    </div>
    {{/each}}
</div>